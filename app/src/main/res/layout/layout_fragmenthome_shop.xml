<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWrite"
    android:orientation="vertical">

    <include layout="@layout/layout_fragmenthome_shop_horizontalscrollview_list_view"></include>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/colorGray_divider"></View>

    <com.yundian.wudou.customview.ListView
        android:id="@+id/lv_fragmenthome_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWrite"
        android:descendantFocusability="afterDescendants"
        android:divider="@color/colorGray_divider"
        android:dividerHeight="2px"
        android:listSelector="@android:color/transparent" />
</LinearLayout>