<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:background="@color/colorWrite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.bigkoo.convenientbanner.ConvenientBanner
                android:id="@+id/cb_activity_servicesdetails"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_180"
                app:canLoop="true"></com.bigkoo.convenientbanner.ConvenientBanner>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/size_10">

                <TextView
                    android:id="@+id/tv_activity_servicesdetails_goods_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品名称"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_text_15" />

                <TextView
                    android:id="@+id/tv_activity_servicesdetails_icon_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="商家"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_activity_servicesdetails_goods_timetitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_activity_servicesdetails_goods_name"
                    android:layout_marginTop="@dimen/size_5"
                    android:text="发布时间："
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_activity_servicesdetails_goods_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_activity_servicesdetails_goods_timetitle"
                    android:layout_toRightOf="@id/tv_activity_servicesdetails_goods_timetitle"
                    android:text="00:00:00"
                    android:textSize="15sp" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/colorGray_2" />

            <WebView
                android:id="@+id/wv_activity_commodity_details_introduce"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></WebView>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_layout_linkman_viewcontact"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/colorGreenBefore"
        android:gravity="center"
        android:text="查看联系方式"
        android:textColor="@color/colorWrite"
        android:textSize="20sp" />
</RelativeLayout>
