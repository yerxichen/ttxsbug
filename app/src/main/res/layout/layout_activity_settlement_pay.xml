<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_activity_settlement_pay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/size_10"
    android:paddingLeft="@dimen/size_10"
    android:paddingRight="@dimen/size_10"
    android:paddingTop="@dimen/size_10">

    <CheckBox
        android:id="@+id/cb_activity_settlement_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_activity_settlement_pay_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="@string/online_pay"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/size_text_15" />

    <TextView
        android:id="@+id/tv_activity_settlement_pay_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/size_5"
        android:layout_toEndOf="@+id/tv_activity_settlement_pay_title"
        android:layout_toRightOf="@+id/tv_activity_settlement_pay_title"
        android:text="@string/wechat_alipay"
        android:textColor="@color/colorGray_1" />

</RelativeLayout>