<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:background="@color/colorWrite"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_view_share"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_150"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/ll_view_share_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_view_share_wechat"
                android:layout_width="@dimen/size_50"
                android:layout_height="@dimen/size_50"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon_friends" />

            <TextView
                android:id="@+id/_view_share_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享给微信好友" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

        <LinearLayout
            android:id="@+id/ll_view_share_weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_view_share_weibo"
                android:layout_width="@dimen/size_50"
                android:layout_height="@dimen/size_50"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon_wechat" />

            <TextView
                android:id="@+id/tv_view_share_weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享到微博" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0.5"
        android:background="@color/colorGray" />

    <TextView
        android:id="@+id/tv_view_share_cancle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:padding="@dimen/size_10"
        android:text="@string/cancle" />

</LinearLayout>