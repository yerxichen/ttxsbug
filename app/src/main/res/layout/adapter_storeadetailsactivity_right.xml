<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="@dimen/size_1">

    <ImageView
        android:id="@+id/iv_adapter_activitystoredetils_productimg"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/test_sale_default" />

    <TextView
        android:id="@+id/tv_adapter_activitystoredetils_productname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_adapter_activitystoredetils_productimg"
        android:layout_toRightOf="@id/iv_adapter_activitystoredetils_productimg"
        android:layout_marginLeft="@dimen/size_10"
        android:maxLines="2"
        android:text="安第斯阳光酒园 特选赤霞珠干葡萄酒"
        android:textColor="@color/colorBlack"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_adapter_activitystoredetils_productrmb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_adapter_activitystoredetils_productimg"
        android:layout_alignLeft="@id/tv_adapter_activitystoredetils_productname"
        android:text="@string/rmb"
        android:textColor="@color/colorOrange"
        android:textSize="@dimen/size_text_15" />

    <TextView
        android:id="@+id/tv_adapter_activitystoredetils_productprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_adapter_activitystoredetils_productrmb"
        android:layout_toRightOf="@id/tv_adapter_activitystoredetils_productrmb"
        android:layout_marginLeft="@dimen/size_2"
        android:text="0"
        android:textColor="@color/colorOrange"
        android:textSize="@dimen/size_text_14" />

    <ImageView
        android:id="@+id/iv_adapter_activitystoredetils_productadd"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/icon_add" />

    <TextView
        android:id="@+id/tv_adapter_activitystoredetils_productcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/iv_adapter_activitystoredetils_productadd"
        android:paddingLeft="@dimen/size_10"
        android:paddingRight="@dimen/size_10"
        android:text="0"
        android:textSize="19sp"
        android:textColor="@color/colorBlack"/>

    <ImageView
        android:id="@+id/iv_adapter_activitystoredetils_productreduce"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/tv_adapter_activitystoredetils_productcount"
        android:src="@drawable/icon_reduce" />
</RelativeLayout>