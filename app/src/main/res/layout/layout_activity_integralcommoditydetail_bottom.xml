<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_10"
        android:text="订单详情"
        android:textColor="@color/colorRed"
        android:textSize="@dimen/size_text_15" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0.3"
        android:background="@color/colorGray_1" />

    <RelativeLayout
        android:id="@+id/rl_integralcommoditydetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/size_10">

        <TextView
            android:id="@+id/tv_integralcommoditydetails_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="楚沐扬"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/tv_integralcommoditydetails_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_20"
            android:layout_toRightOf="@id/tv_integralcommoditydetails_name"
            android:text="18355407806"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/tv_integralcommoditydetails_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_integralcommoditydetails_name"
            android:layout_marginTop="@dimen/size_10"
            android:text="江苏科技金融大厦"
            android:textColor="@color/colorBlack" />

        <ImageView
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/go_before" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0.3"
        android:background="@color/colorGray_1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_10">

        <TextView
            android:id="@+id/tv_integralcommoditydetails_integral_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所需积分:"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/tv_integralcommoditydetails_integral_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/size_20"
            android:text="1200"
            android:textColor="@color/colorOrange"
            android:textSize="15sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0.3"
        android:background="@color/colorGray_1" />

    <Button
        android:id="@+id/btn_integralcommoditydetails_pay"
        android:layout_width="200dp"
        android:layout_height="@dimen/size_40"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="@dimen/size_20"
        android:background="@drawable/background_button_round_green"
        android:text="确认兑换"
        android:textColor="@color/colorWrite" />
</LinearLayout>