<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/colorWrite"
        android:orientation="horizontal"
        android:padding="@dimen/size_5">

        <ImageView
            android:id="@+id/iv_adapter_activitystoredetils_productimg"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/test_sale_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_adapter_activitystoredetils_productname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_10"
                    android:maxLines="2"
                    android:text="安第斯阳光酒园 特选赤霞珠干葡萄酒"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_10"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/size_2"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_adapter_activitystoredetils_productrmb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rmb"
                        android:textColor="@color/colorOrange"
                        android:textSize="@dimen/size_text_15" />

                    <TextView
                        android:id="@+id/tv_adapter_activitystoredetils_productprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_2"
                        android:text="0"
                        android:textColor="@color/colorOrange"
                        android:textSize="@dimen/size_text_14" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.9"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal"
                    android:padding="@dimen/size_2">

                    <ImageView
                        android:id="@+id/iv_adapter_activitystoredetils_productreduce"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:focusable="false"
                        android:src="@drawable/icon_reduce" />

                    <TextView
                        android:id="@+id/tv_adapter_activitystoredetils_productcount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/size_5"
                        android:paddingRight="@dimen/size_5"
                        android:text="0"
                        android:textColor="@color/colorBlack"
                        android:textSize="19sp" />

                    <ImageView
                        android:id="@+id/iv_adapter_activitystoredetils_productadd"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="right"
                        android:focusable="false"
                        android:src="@drawable/icon_add" />


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/size_15"
        android:background="@color/colorGray_2"
        android:visibility="visible"></View>
</LinearLayout>