<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jwenfeng.library.pulltorefresh.PullToRefreshLayout
        android:id="@+id/prl_activity_collect"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/lv_activity_collect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/colorGray_2"
            android:dividerHeight="1px"></ListView>
    </com.jwenfeng.library.pulltorefresh.PullToRefreshLayout>

    <RelativeLayout
        android:id="@+id/rl_activity_collect_nodata"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_activity_collect_nodata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_nodata" />

        <TextView
            android:id="@+id/tv_activity_collect_nodata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_activity_collect_nodata"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorBlack"
            android:textSize="15sp" />
    </RelativeLayout>
</RelativeLayout>
