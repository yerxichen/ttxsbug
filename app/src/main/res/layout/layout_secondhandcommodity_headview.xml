<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_secondhand_division_search"
        style="@style/edittext_search"
        android:hint="输入类别或者关键字" />

    <LinearLayout
        android:id="@+id/ll_secondhand_division_select"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/sp_secondhand_position"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:dropDownVerticalOffset="35dp" />

        <View
            android:layout_width="@dimen/size_0.5"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/size_5"
            android:layout_marginTop="@dimen/size_5"
            android:background="@color/colorGray_2" />

        <Spinner
            android:id="@+id/sp_secondhand_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.5"
            android:dropDownVerticalOffset="35dp" />

        <View
            android:layout_width="@dimen/size_0.5"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/size_5"
            android:layout_marginTop="@dimen/size_5"
            android:background="@color/colorGray_2" />

        <Spinner
            android:id="@+id/sp_secondhand_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:dropDownVerticalOffset="35dp" />
    </LinearLayout>
</LinearLayout>
