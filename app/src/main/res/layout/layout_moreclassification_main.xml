<?xml version="1.0" encoding="utf-8"?>
<com.flipboard.bottomsheet.BottomSheetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomSheetLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/srl_more_classification"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.yundian.wudou.customview.MyPullUpListView
                android:id="@+id/lv_activity_more_classification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.yundian.wudou.customview.MyPullUpListView>
        </android.support.v4.widget.SwipeRefreshLayout>

    </LinearLayout>
</com.flipboard.bottomsheet.BottomSheetLayout>