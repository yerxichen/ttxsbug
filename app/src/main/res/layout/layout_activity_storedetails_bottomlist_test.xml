<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/car_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWrite"
    android:descendantFocusability="blocksDescendants"
    android:elevation="4dp"
    android:orientation="vertical"
    android:paddingBottom="40dp"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <RelativeLayout
        android:id="@+id/rl_activity_storedetails_bottom_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_activity_storedetails_bottom_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="清空购物车"
            android:textColor="@color/colorGreenBefore"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_activity_storedetails_bottom_delete"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/tv_activity_storedetails_bottom_delete"
            android:src="@drawable/icon_delete_green" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_activity_storedetails_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false" />
</LinearLayout>