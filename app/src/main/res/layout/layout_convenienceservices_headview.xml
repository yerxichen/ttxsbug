<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWrite"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_layout_convenienceservices_search"
        style="@style/edittext_search"
        android:hint="搜索商品"/>

    <com.bigkoo.convenientbanner.ConvenientBanner
        android:id="@+id/cb_layout_convenienceservices"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        app:canLoop="true"
        android:visibility="gone"></com.bigkoo.convenientbanner.ConvenientBanner>

    <LinearLayout
        android:id="@+id/ll_layout_convenienceservices"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/sp_layout_convenienceservices_region"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:dropDownVerticalOffset="35dp" />

        <View
            android:layout_width="@dimen/size_0.5"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/size_5"
            android:layout_marginTop="@dimen/size_5"
            android:background="@color/colorGray_2" />

        <Spinner
            android:id="@+id/sp_layout_convenienceservices_category"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:dropDownVerticalOffset="35dp" />

        <View
            android:layout_width="@dimen/size_0.5"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/size_5"
            android:layout_marginTop="@dimen/size_5"
            android:background="@color/colorGray_2" />

        <Spinner
            android:id="@+id/sp_layout_convenienceservices_sate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:dropDownVerticalOffset="35dp" />
    </LinearLayout>
</LinearLayout>