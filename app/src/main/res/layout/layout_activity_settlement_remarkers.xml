<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_activity_settlement_remarkers"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/size_10">

    <TextView
        android:id="@+id/tv_activity_settlement_remarkers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/remarkers"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/size_text_15" />

    <TextView
        android:id="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_activity_settlement_remarkers"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/tv_activity_settlement_remarkers"
        android:text="订单备注(30字以内)"
        android:textColor="@color/colorGray_1"
        android:textSize="@dimen/size_text_15" />

    <EditText
        android:id="@+id/et_activity_settlement_remarkers"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_activity_settlement_remarkers"
        android:layout_marginTop="@dimen/size_5"
        android:background="@null"
        android:gravity="top"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/size_text_15" />
</RelativeLayout>