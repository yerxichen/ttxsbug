<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_activity_settlement_adress"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/tv_activity_settlement_adress_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/size_10"
        android:text="高"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/size_text_15" />

    <TextView
        android:id="@+id/tv_activity_settlement_adress_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_activity_settlement_adress_name"
        android:layout_toEndOf="@+id/tv_activity_settlement_adress_name"
        android:layout_toRightOf="@+id/tv_activity_settlement_adress_name"
        android:text="15112341676"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/size_text_15" />

    <TextView
        android:id="@+id/tv_activity_settlement_adress_adress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_activity_settlement_adress_name"
        android:layout_alignStart="@+id/tv_activity_settlement_adress_name"
        android:layout_below="@+id/tv_activity_settlement_adress_name"
        android:paddingBottom="@dimen/size_10"
        android:text="南京市建业区明园社区15号"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/size_text_15" />

    <ImageView
        android:id="@+id/iv_activity_settlement_adress_go"
        android:layout_width="@dimen/size_30"
        android:layout_height="@dimen/size_30"
        android:src="@drawable/go_before"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>