    <TextView
        android:id="@+id/tv_adapter_merchantorder_surplusmoney_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/view_adapter_merchantorder_store_line_one"
        android:layout_marginTop="@dimen/size_10"
        android:layout_marginLeft="10dp"
        android:text="@string/surplus_money"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/size_text_14"/>

    <TextView
        android:id="@+id/tv_adapter_merchantorder_surplusmoney_rmb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_adapter_merchantorder_surplusmoney_title"
        android:layout_toEndOf="@+id/tv_adapter_merchantorder_surplusmoney_title"
        android:layout_toRightOf="@+id/tv_adapter_merchantorder_surplusmoney_title"
        android:text="@string/rmb"
        android:textColor="@color/colorOrange"
        android:textSize="@dimen/size_text_14"/>

    <TextView
        android:id="@+id/tv_adapter_merchantorder_surplusmoney"
        android:layout_width="wrap_content"
