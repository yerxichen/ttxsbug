        android:layout_toEndOf="@+id/tv_adapter_merchantorder_surplusmoney_rmb"
        android:layout_toRightOf="@+id/tv_adapter_merchantorder_surplusmoney_rmb"
        android:layout_marginLeft="2dp"
        android:text="0.00"
        android:textColor="@color/colorOrange"
        android:textSize="@dimen/size_text_14"/>

    <TextView
        android:id="@+id/tv_adapter_merchantorder_ordertime_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_adapter_merchantorder_surplusmoney_title"
        android:layout_alignStart="@+id/tv_adapter_merchantorder_surplusmoney_title"
        android:layout_below="@+id/tv_adapter_merchantorder_surplusmoney_title"
        android:layout_marginTop="@dimen/size_10"
        android:text="@string/order_time_"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/size_text_14"/>

    <TextView
        android:id="@+id/tv_adapter_merchantorder_ordertime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_adapter_merchantorder_ordertime_title"
        android:layout_toEndOf="@+id/tv_adapter_merchantorder_ordertime_title"
        android:layout_toRightOf="@+id/tv_adapter_merchantorder_ordertime_title"
        android:text="0000/00/00"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/size_text_14"/>

    <ImageView
        android:id="@+id/iv_adapter_merchantorder_go"
        android:layout_width="@dimen/size_20"
        android:layout_height="@dimen/size_14"
        android:layout_alignRight="@id/tv_adapter_merchantorder_status"
        android:layout_below="@id/tv_adapter_merchantorder_surplusmoney_title"
        android:src="@drawable/back_my" />

    <HorizontalScrollView
        android:id="@+id/hsl_adapter_merchantorder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_adapter_merchantorder_ordertime_title"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/ll_adapter_merchantorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"></LinearLayout>
    </HorizontalScrollView>

    <View
        android:id="@+id/view_adapter_merchantorder_linetwo"
        style="@style/divider_height_one"
        android:layout_below="@id/hsl_adapter_merchantorder" />

    <TextView
        android:id="@+id/tv_adapter_merchantorder_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/view_adapter_merchantorder_linetwo"
        android:background="@color/colorOrangeLight"
        android:paddingBottom="@dimen/size_7"
        android:paddingLeft="@dimen/size_15"
        android:paddingRight="@dimen/size_15"
        android:paddingTop="@dimen/size_7"
        android:text="订单完成"
        android:textSize="14sp"
        android:textColor="@color/colorWrite" />
