<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_id"
            android:paddingBottom="5dp"
            android:paddingLeft="17dp"
            android:paddingRight="5dp">

            <ImageView
                android:id="@+id/iv_adapter_fragmenthome_sale_goods"
                android:layout_width="85dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:src="@color/colorGreenAfter" />

            <TextView
                android:id="@+id/tv_adapter_fragmenthome_sale_name"
                style="@style/text_black_13"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/iv_adapter_fragmenthome_sale_goods"
                android:layout_marginTop="@dimen/size_1"
                android:maxLines="2"
                android:lines="2"
                android:text="@string/product_name" />

            <TextView
                android:id="@+id/iv_adapter_fragmenthome_sale_price"
                style="@style/text_orange_13"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_adapter_fragmenthome_sale_name"
                android:singleLine="true"
                android:text="¥ 0.00" />

            <TextView
                android:id="@+id/tv_line_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/iv_adapter_fragmenthome_sale_price"
                android:singleLine="true"
                android:text="¥ 0.00"
                android:textColor="@color/colorHint"
                android:textSize="@dimen/size_11" />

            <ImageView
                android:id="@+id/iv_adapter_fragmenthome_sale_shoppingcart"
                android:layout_width="@dimen/size_25"
                android:layout_height="@dimen/size_10"
                android:layout_alignBottom="@+id/tv_line_price"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/iv_adapter_fragmenthome_sale_price"
                android:paddingRight="@dimen/size_3"
                android:src="@drawable/shopcart_orange" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/tv_id"
            android:layout_width="50dp"
            android:layout_height="15dp"
            android:layout_marginTop="@dimen/size_2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/jingbao"
            android:visibility="visible" />
    </FrameLayout>

</RelativeLayout>