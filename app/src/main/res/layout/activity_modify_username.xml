<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/size_10">
    
    <TextView
        android:id="@+id/tv_activitymodifyusername_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名："
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/size_text_15"/>

    <EditText
        android:id="@+id/et_activitymodifyusername_content"
        android:background="@drawable/background_edittext"
        android:padding="@dimen/size_10"
        android:layout_marginTop="@dimen/size_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_5"
        android:text="以中文或英文字母开头，跟4-16个字符，一个汉字为两个字符"/>

    <TextView
        android:id="@+id/tv_activitymodifyusername_modify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/colorWrite"
        android:textSize="@dimen/size_text_15"
        android:background="@drawable/background_button_round_green"/>

</LinearLayout>
