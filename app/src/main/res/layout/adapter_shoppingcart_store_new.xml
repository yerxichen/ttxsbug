<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_adapter_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size_15"
            android:gravity="center"
            android:singleLine="true"
            android:text="店铺名称"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/size_14" />

        <ImageView
            android:id="@+id/iv_adapter_to_shop"
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_toEndOf="@+id/tv_adapter_shop_name"
            android:layout_toRightOf="@+id/tv_adapter_shop_name"
            android:scaleType="fitXY"
            android:src="@drawable/go_before" />

        <ImageView
            android:id="@+id/iv_dele"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginEnd="26dp"
            android:layout_marginRight="26dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_delete_b" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0.3"
        android:layout_marginLeft="@dimen/size_15"
        android:layout_marginRight="@dimen/size_15"
        android:background="@color/color_d2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="@dimen/size_15"
        android:layout_marginRight="@dimen/size_15"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="2.3">

            <HorizontalScrollView
                android:id="@+id/hs_adapter_s_goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/ll_adapter_goods"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"></LinearLayout>
            </HorizontalScrollView>


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_adapter_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:text="共8件"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/size_13" />

            <TextView
                android:id="@+id/tv_adapter_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="1.37kg"
                android:textColor="@color/color_d2" />
        </LinearLayout>

    </LinearLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0.3"
        android:layout_marginLeft="@dimen/size_15"
        android:layout_marginRight="@dimen/size_15"
        android:background="@color/color_d2" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/size_15"
        android:layout_marginRight="@dimen/size_15"
        android:orientation="vertical">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_commodity_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="商品金额"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/size_14" />

            <TextView
                android:id="@+id/tv_commodity_amount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                android:layout_marginEnd="14dp"
                android:layout_marginRight="14dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="¥0.00"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/size_14" />
        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_commodity_freight_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="运费金额"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/size_14" />

            <TextView
                android:id="@+id/tv_commodity_freight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                android:layout_marginEnd="14dp"
                android:layout_marginRight="14dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="¥0.00"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/size_14" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_settle_accounts"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/size_5"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="@dimen/size_5"
                android:background="@drawable/background_button_green"
                android:gravity="center"
                android:singleLine="true"
                android:text="去结算"
                android:textColor="@color/colorWrite"
                android:textSize="@dimen/size_text_14" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="27dp"
                android:layout_marginRight="27dp"
                android:layout_toLeftOf="@+id/tv_settle_accounts"
                android:layout_toStartOf="@+id/tv_settle_accounts"
                android:padding="5dp">


                <TextView
                    android:id="@+id/tv_adapter_settlement_title"
                    style="@style/text_black_14"
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="11dp"
                    android:layout_marginStart="11dp"
                    android:text="@string/total" />

                <TextView
                    android:id="@+id/tv_adapter_settlement_rmb"
                    style="@style/text_orange_14"
                    android:layout_alignBottom="@id/tv_adapter_settlement_title"
                    android:layout_toRightOf="@id/tv_adapter_settlement_title"
                    android:text="@string/rmb" />

                <TextView
                    android:id="@+id/tv_adapter_settlement_totle"
                    style="@style/text_orange_14"
                    android:layout_alignBottom="@id/tv_adapter_settlement_rmb"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@+id/tv_adapter_settlement_rmb"
                    android:text="0.00" />


            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>