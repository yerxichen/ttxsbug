<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_35"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_activity_coupons_notused"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="未使用"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/size_text_16" />

        <View
            android:layout_width="@dimen/size_0.3"
            android:layout_height="@dimen/size_20"
            android:layout_gravity="center"
            android:background="@color/colorGray" />

        <TextView
            android:id="@+id/tv_activity_coupons_used"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="已使用"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/size_text_16" />

        <View
            android:layout_width="@dimen/size_0.3"
            android:layout_height="@dimen/size_20"
            android:layout_gravity="center"
            android:background="@color/colorGray" />

        <TextView
            android:id="@+id/tv_activity_coupons_overdue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="已过期"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/size_text_16" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_activity_coupons_left"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_3"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_activity_coupons_mid"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_3"
            android:layout_weight="1"
            android:paddingLeft="@dimen/size_10"
            android:paddingRight="@dimen/size_10"
            android:src="@color/colorGreenBefore" />

        <ImageView
            android:id="@+id/iv_activity_coupons_right"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_3"
            android:layout_weight="1" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_activity_coupons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

</LinearLayout>
