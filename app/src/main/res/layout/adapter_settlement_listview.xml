<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_adapter_settlement_shop_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/size_5"
        android:paddingLeft="@dimen/size_5"
        android:paddingTop="@dimen/size_5"
        android:singleLine="true"
        android:text="水果大王-福园街店"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/size_text_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0.3"
        android:background="@color/colorGray_3" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_70">

        <HorizontalScrollView
            android:id="@+id/hs_adapter_settlement_goods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="70dp"
            android:paddingLeft="10dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/ll_adapter_settlement_goods"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"></LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/tv_adapter_settlement_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:text="共四件"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/tv_adapter_settlement_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_adapter_settlement_count"
            android:paddingRight="10dp"
            android:text="1.37kg"
            android:textColor="@color/colorBlack" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0.3"
        android:background="@color/colorGray_3" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_10">

        <TextView
            android:id="@+id/tv_adapter_settlement_price_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="商品金额"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/size_text_15" />

        <TextView
            android:id="@+id/tv_adapter_settlement_price_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="¥29.60"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/tv_adapter_settlement_send_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tv_adapter_settlement_price_title"
            android:layout_marginTop="@dimen/size_5"
            android:text="运费金额"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/size_text_15" />

        <TextView
            android:id="@+id/tv_adapter_settlement_send_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_adapter_settlement_price_content"
            android:layout_marginTop="@dimen/size_5"
            android:text="¥2.00"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/tv_adapter_settlement_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/tv_adapter_settlement_send_content"
            android:layout_below="@id/tv_adapter_settlement_send_content"
            android:layout_marginTop="@dimen/size_5"
            android:text="¥31.60"
            android:textColor="@color/colorRed" />


    </RelativeLayout>


</LinearLayout>
