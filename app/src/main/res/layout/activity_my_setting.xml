<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wudou="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yundian.wudou.activity.MySettingActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.yundian.wudou.customview.CircleImageView
                android:id="@+id/civ_activity_my_setting"
                android:layout_width="@dimen/size_70"
                android:layout_height="@dimen/size_70"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/size_40"
                android:layout_marginTop="@dimen/size_50"
                wudou:border_color="@color/colorBlack"
                wudou:border_width="@dimen/size_1" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/size_10">

                <TableRow
                    android:id="@+id/tr_activity_mysetting_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/size_7"
                    android:paddingLeft="@dimen/size_10"
                    android:paddingTop="@dimen/size_7">

                    <TextView
                        android:id="@+id/tv_activity_mysetting_username_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/user_name" />

                    <TextView
                        android:id="@+id/tv_activity_mysetting_username_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textColor="@color/colorBlack" />

                    <ImageView
                        android:id="@+id/iv_activity_mysetting_username_go"
                        android:layout_width="@dimen/size_30"
                        android:layout_height="@dimen/size_30"
                        android:src="@drawable/go_before"/>

                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_1"
                    android:layout_marginLeft="@dimen/size_10"
                    android:layout_marginRight="@dimen/size_10"
                    android:background="@color/colorGray_1" />


                <TableRow
                    android:id="@+id/tr_activity_mysetting_loginpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/size_7"
                    android:paddingLeft="@dimen/size_10"
                    android:paddingTop="@dimen/size_7">

                    <TextView
                        android:id="@+id/tv_activity_mysetting_loginpassword_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/login_password" />

                    <TextView
                        android:id="@+id/tv_activity_mysetting_loginpassword_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/modify_password"
                        android:textColor="@color/colorBlack" />

                    <ImageView
                        android:id="@+id/iv_activity_mysetting_loginpassword_go"
                        android:layout_width="@dimen/size_30"
                        android:layout_height="@dimen/size_30"
                        android:src="@drawable/go_before" />

                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_1"
                    android:layout_marginLeft="@dimen/size_10"
                    android:layout_marginRight="@dimen/size_10"
                    android:background="@color/colorGray_1" />

                <TableRow
                    android:id="@+id/tr_activity_mysetting_clearcache"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/size_7"
                    android:paddingLeft="@dimen/size_10"
                    android:paddingTop="@dimen/size_7">

                    <TextView
                        android:id="@+id/tv_activity_mysetting_clearcache_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/clear_cache" />

                    <TextView
                        android:id="@+id/tv_activity_mysetting_clearcache_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="15.8M"
                        android:textColor="@color/colorBlack" />

                    <ImageView
                        android:id="@+id/iv_activity_mysetting_clearcache_go"
                        android:layout_width="@dimen/size_30"
                        android:layout_height="@dimen/size_30"
                        android:src="@drawable/go_before" />

                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_1"
                    android:layout_marginLeft="@dimen/size_10"
                    android:layout_marginRight="@dimen/size_10"
                    android:background="@color/colorGray_1" />

                <TableRow
                    android:id="@+id/tr_activity_mysetting_aboutus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/size_7"
                    android:paddingLeft="@dimen/size_10"
                    android:paddingTop="@dimen/size_7">

                    <TextView
                        android:id="@+id/tv_activity_mysetting_aboutus_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/about_us" />

                    <TextView
                        android:id="@+id/tv_activity_mysetting_aboutus_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textColor="@color/colorBlack" />

                    <ImageView
                        android:id="@+id/iv_activity_mysetting_aboutus_go"
                        android:layout_width="@dimen/size_30"
                        android:layout_height="@dimen/size_30"
                        android:src="@drawable/go_before" />

                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_1"
                    android:layout_marginLeft="@dimen/size_10"
                    android:layout_marginRight="@dimen/size_10"
                    android:background="@color/colorGray_1" />

            </TableLayout>

            <Button
                android:id="@+id/btn_activity_mysetting_exit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_30"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_marginRight="@dimen/size_10"
                android:layout_marginTop="@dimen/size_20"
                android:text="@string/exit"
                android:textSize="15dp"
                android:textColor="@color/colorWrite"
                android:background="@drawable/background_button_round_green"/>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
