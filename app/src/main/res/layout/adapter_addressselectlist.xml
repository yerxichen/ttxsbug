<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWrite">

    <RelativeLayout
        android:id="@+id/rl_adapter_addressselectlist_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_adapter_addressseclectlist_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:text="万达广场东坊"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/size_text_15" />

        <TextView
            android:id="@+id/tv_adapter_addressselectlist_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_adapter_addressseclectlist_address"
            android:layout_toRightOf="@id/tv_adapter_addressseclectlist_address"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/size_text_16" />

        <TextView
            android:id="@+id/tv_adapter_addressseclectlist_address_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_adapter_addressseclectlist_address"
            android:layout_marginTop="10dp"
            android:text="详细地址"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/size_text_16" />

        <ImageView
            android:id="@+id/iv_adapter_addressseclectlist"
            android:layout_width="@dimen/size_15"
            android:layout_height="@dimen/size_15"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/back_my" />

        <TextView
            android:id="@+id/tv_adapter_addressselectlist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_adapter_addressseclectlist_address_detail"
            android:layout_marginTop="@dimen/size_10"
            android:text="杨先生"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/size_text_14" />

        <TextView
            android:id="@+id/tv_adapter_addressseclectlist_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_adapter_addressselectlist_name"
            android:layout_marginLeft="@dimen/size_30"
            android:layout_toEndOf="@+id/tv_adapter_addressselectlist_name"
            android:layout_toRightOf="@+id/tv_adapter_addressselectlist_name"
            android:text="15712349015"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/size_text_14" />
    </RelativeLayout>

    <TextView
        android:id="@+id/text_delete"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/rl_adapter_addressselectlist_child"
        android:layout_alignTop="@id/rl_adapter_addressselectlist_child"
        android:layout_toRightOf="@id/rl_adapter_addressselectlist_child"
        android:background="@android:color/holo_red_light"
        android:gravity="center"
        android:text="删除"
        android:textColor="@android:color/white" />
</RelativeLayout>










