<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGreenBefore"
    android:clipChildren="false"
    android:fitsSystemWindows="true"
    tools:context="com.yundian.wudou.activity.FragmentContainerActivity">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/size_40" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_gravity="bottom"
        android:background="@drawable/background_fragment_bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_fragmentcontaineractivity_homepage"
            android:layout_width="@dimen/size_35"
            android:layout_height="@dimen/size_35"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/size_20"
            android:background="@drawable/background_fragment_homepage" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_fragmentcontaineractivity_classification"
            android:layout_width="@dimen/size_35"
            android:layout_height="@dimen/size_35"
            android:layout_gravity="bottom"
            android:background="@drawable/background_fragment_classification" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_fragmentcontaineractivity_store"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/size_5"
            android:src="@drawable/background_shop" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_fragmentcontaineractivity_shoppingcart"
            android:layout_width="@dimen/size_35"
            android:layout_height="@dimen/size_35"
            android:layout_gravity="bottom"
            android:background="@drawable/background_fragment_shoppingcart" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_fragmentcontaineractivity_my"
            android:layout_width="@dimen/size_35"
            android:layout_height="@dimen/size_35"
            android:layout_gravity="bottom"
            android:layout_marginRight="@dimen/size_20"
            android:background="@drawable/background_fragment_my" />
    </LinearLayout>
</FrameLayout>
