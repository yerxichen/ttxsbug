<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:padding="@dimen/size_10">

    <ImageView
        android:id="@+id/iv_adapter_searchresult_listview"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/test_sale_default" />

    <View
        android:id="@+id/view_adapter_searchresult_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0.5"
        android:layout_below="@id/iv_adapter_searchresult_listview"
        android:layout_marginTop="@dimen/size_5"
        android:background="@color/colorGrayLight" />

    <TextView
        android:id="@+id/tv_adapter_searchresult_listview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_adapter_searchresult_listview"
        android:layout_toRightOf="@id/iv_adapter_searchresult_listview"
        android:layout_marginLeft="10dp"
        android:text="西瓜王子鲜果美食（云锦路店）"
        android:textColor="@color/colorBlack"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_adapter_searchresult_listview_sendprice_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_adapter_searchresult_listview"
        android:layout_toRightOf="@id/iv_adapter_searchresult_listview"
        android:layout_marginLeft="10dp"
        android:text="配送费"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/size_text_13" />


    <TextView
        android:id="@+id/tv_adapter_searchresult_listview_sendprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_adapter_searchresult_listview"
        android:layout_toEndOf="@+id/tv_adapter_searchresult_listview_sendprice_title"
        android:layout_toRightOf="@+id/tv_adapter_searchresult_listview_sendprice_title"
        android:text="¥5"
        android:textColor="@color/colorOrange"
        android:textSize="@dimen/size_text_13" />

    <TextView
        android:id="@+id/tv_adapter_searchresult_listview_startprice_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_adapter_searchresult_listview_sendprice"
        android:layout_toEndOf="@+id/tv_adapter_searchresult_listview_sendprice"
        android:layout_toRightOf="@+id/tv_adapter_searchresult_listview_sendprice"
        android:text=" | 起送价"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/size_text_13" />

    <TextView
        android:id="@+id/tv_adapter_searchresult_listview_startprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_adapter_searchresult_listview_startprice_title"
        android:layout_toEndOf="@+id/tv_adapter_searchresult_listview_startprice_title"
        android:layout_toRightOf="@+id/tv_adapter_searchresult_listview_startprice_title"
        android:text="¥20"
        android:textColor="@color/colorOrange"
        android:textSize="@dimen/size_text_13" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_adapter_searchresult_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/view_adapter_searchresult_line"
        android:focusable="false"></android.support.v7.widget.RecyclerView>
</RelativeLayout>
